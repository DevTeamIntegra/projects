<mvc:View xmlns:mvc="sap.ui.core.mvc" controllerName="prestamosgp2.controller.DetailConsumo2" xmlns="sap.m" xmlns:layout="sap.ui.layout">
    <Page id="idTitleCuadro2" title="SImulación Préstamos Consumo" showHeader="true" showFooter="true" showNavButton="false">
        <content>
            <Title text="INSTITUTO DE CRÉDITO OFICIALINSTITUTO DE CRÉDITO OFICIAL" titleStyle="H3" width="100%" textAlign="Center" visible="true" wrapping="false"/>
            <Title text="Simulación del cálculo del cuadro de intereses de un préstamo de consumo" titleStyle="H5" width="100%" textAlign="Center" visible="true" wrapping="false"/>
            <Title text="{parts: [{path: 'UserInfoComplete>/dni'}], formatter: '.formatter.formatDateTitle'}" titleStyle="H6" width="100%" textAlign="Center" visible="true" wrapping="false"/>
            <Table id="idTableConsumo" width="75%" noDataText="No data" mode="None" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true" class="sapUiTinyMarginTop sapUiTinyMarginBottom sapUiLargeMarginBegin sapUiLargeMarginEnd">
                <infoToolbar>
                    <Toolbar width="100%" height="auto" design="Auto" visible="false" enabled="true">
                        <content>
                            <Label text="Label" design="Standard" width="100%" required="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                        </content>
                    </Toolbar>
                </infoToolbar>
                <headerToolbar/>
                <columns>
                    <Column id="idConsumoTC1" width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Phone" demandPopin="false" popinDisplay="Inline" mergeDuplicates="false">
                        <header>
                            <Text text="Datos Préstamo" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                        </header>
                        <footer/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                        <header/>
                        <footer/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                        <header/>
                        <footer/>
                    </Column>
                </columns>
                <items>
                    <!-- <ColumnListItem type="Active">
                        <cells>
                            <ObjectIdentifier title="CÓDIGO:" text="" titleActive="false" visible="true"/>
                            <Text text="8101195801000" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                            <ObjectNumber number="" unit="" emphasized="true" state="None"/>
                        </cells>
                    </ColumnListItem> -->
                    <ColumnListItem type="Active">
                        <cells>
                            <ObjectIdentifier title="PRESTATARIO: " text="{UserInfoComplete>/name}" titleActive="false" visible="true"/>
                            <ObjectIdentifier title="D.N.I.:" text="{UserInfoComplete>/dni}" titleActive="false" visible="true"/>
                            <ObjectIdentifier title="TAE:" text="{PreviousConsumoPageModel>/tae}" titleActive="false" visible="true"/>
                        </cells>
                    </ColumnListItem>
                    <ColumnListItem type="Active">
                        <cells>
                            <ObjectIdentifier title="DOMICILIO:" text="{parts: [{path: 'UserInfoComplete>/calle'}, {path: 'UserInfoComplete>/numero'}, {path: 'UserInfoComplete>/planta'}, {path: 'UserInfoComplete>/puerta'}, {path: 'UserInfoComplete>/ciudad'}], formatter: '.formatter.formatAddress'}" titleActive="false" visible="true"/>
                            <ObjectIdentifier title="POBLACIÓN:" text="{UserInfoComplete>/ciudad}" titleActive="false" visible="true"/>
                            <ObjectIdentifier title="COD. POST:" text="{UserInfoComplete>/cp}" titleActive="false" visible="true"/>
                        </cells>
                    </ColumnListItem>
                    <ColumnListItem type="Active">
                        <cells>
                            <ObjectIdentifier title="IMPORTE PRÉSTAMO:" text="{PreviousConsumoPageModel>/importe}" titleActive="false" visible="true"/>
                            <ObjectIdentifier title="CARENCIA" text="{PreviousConsumoPageModel>/carencia}" titleActive="false" visible="true"/>
                            <ObjectIdentifier title="DEMORAS" text="" titleActive="false" visible="true"/>
                            <layout:HorizontalLayout>
                                <layout:content/>
                            </layout:HorizontalLayout>
                            <layout:HorizontalLayout>
                                <layout:content/>
                            </layout:HorizontalLayout>
                        </cells>
                    </ColumnListItem>
                    <ColumnListItem type="Active">
                        <cells>
                            <ObjectIdentifier title="VENCIMIENTOS:" text="MENSUALES" titleActive="false" visible="true"/>
                            <ObjectIdentifier title="DIAS:" text="360" titleActive="false" visible="true"/>
                            <ObjectIdentifier title="PLAZOS" text="{PreviousConsumoPageModel>/plazo}" titleActive="false" visible="true"/>
                            <layout:HorizontalLayout>
                                <layout:content/>
                            </layout:HorizontalLayout>
                            <layout:HorizontalLayout>
                                <layout:content/>
                            </layout:HorizontalLayout>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            <ScrollContainer height="22.5rem" vertical="true" focusable="true">
            <Table id="idTableViviendaLarga" width="auto" noDataText="No data" mode="None" showSeparators="All" growing="true" growingThreshold="20" growingScrollToLoad="true" class="sapUiResponsiveMargin" items="{SimuConsumoModel>/}" fixedLayout="true">
                <infoToolbar/>
                <headerToolbar/>
                <columns>
                    <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                        <header>
                            <Text text="Fecha" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                        </header>
                        <footer/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                        <header>
                            <Text text="Disposiciones" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                        </header>
                        <footer/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                        <header>
                            <Text text="Cap. amortizado" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                        </header>
                        <footer/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                        <header>
                            <Text text="T/I" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                        </header>
                        <footer/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                        <header>
                            <Text text="Cuota" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                        </header>
                        <footer/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                        <header>
                            <Text text="Amortizaciones" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                        </header>
                        <footer/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                        <header>
                            <Text text="Intereses" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                        </header>
                        <footer/>
                    </Column>
                    <Column width="auto" hAlign="Left" vAlign="Top" minScreenWidth="Tablet" demandPopin="true" popinDisplay="Inline" mergeDuplicates="false">
                        <header>
                            <Text text="Cap. pendiente" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                        </header>
                        <footer/>
                    </Column>
                </columns>
                <items>
                    <ColumnListItem type="Active">
                        <cells>
                            <ObjectIdentifier title="{SimuConsumoModel>fecha}" text="" titleActive="false" visible="true"/>
                            <Text text="{parts: [{path: 'SimuConsumoModel>disposiciones'}], formatter: '.formatter.formatToFixed2'}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                            <ObjectNumber number="{parts: [{path: 'SimuConsumoModel>capAmortizado'}], formatter: '.formatter.formatToFixed2'}" unit="" emphasized="true" state="None"/>
                            <Text text="{parts: [{path: 'SimuConsumoModel>tipo'}], formatter: '.formatter.formatToFixed2'}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                            <Text text="{parts: [{path: 'SimuConsumoModel>cuotas'}], formatter: '.formatter.formatToFixed2'}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                            <Text text="{parts: [{path: 'SimuConsumoModel>amortizaciones'}], formatter: '.formatter.formatToFixed2'}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                            <Text text="{parts: [{path: 'SimuConsumoModel>intereses'}], formatter: '.formatter.formatToFixed2'}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                            <Text text="{parts: [{path: 'SimuConsumoModel>capPendiente'}], formatter: '.formatter.formatToFixed2'}" width="auto" maxLines="1" wrapping="false" textAlign="Begin" textDirection="Inherit" visible="true"/>
                        </cells>
                    </ColumnListItem>
                </items>
            </Table>
            </ScrollContainer>
            <SegmentedButton id="idSBDetailConsumo2" width="100%" enabled="true" visible="true">
                <items>
                    <SegmentedButtonItem icon="sap-icon://arrow-left" text="Volver" width="50%" enabled="true" press="_onSegmentedButtonItemPress"/>
                    <SegmentedButtonItem icon="sap-icon://print" text="Imprimir" width="50%" enabled="true" press="_onSegmentedButtonImprimirPress"/>
                </items>
            </SegmentedButton>
        </content>
        <footer/>
        <headerContent/>
    </Page>
</mvc:View>
